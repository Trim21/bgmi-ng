{
  "extends": [
    "@trim21",
    "@trim21:app",
    "@trim21:monthly",
    ":semanticCommitTypeAll(chore)"
  ],
  "baseBranches": [
    "master"
  ],
  "pip_setup": {
    "enabled": false
  },
  "pip_requirements": {
    "enabled": false
  },
  "pipenv": {
    "enabled": false
  },
  "semanticCommits": true,
  "packageRules": [
    {
      "groupName": "deps-build",
      "managers": [
        "dockerfile"
      ],
      "versionScheme": "pep440",
      "semanticCommitScope": "deps-build"
    },
    {
      "groupName": "deps-prod",
      "depTypeList": [
        "dependencies"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "groupName": "deps-dev",
      "depTypeList": [
        "dev-dependencies"
      ],
      "semanticCommitScope": "deps-dev"
    },
    {
      "groupName": "pre-commit",
      "semanticCommitScope": "pre-commit",
      "separateMajorMinor": false,
      "paths": [
        ".pre-commit-config.yaml"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.ci/azure-pipelines\\.yml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: versioning=(?<versioning>[a-z-]+?))?\n\\s+name: ?(?<depName>.+?)\n\\s+ref: refs/tags/(?<currentValue>.+?)\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}",
      "lookupNameTemplate": "https://github.com/{{depName}}.git"
    },
    {
      "fileMatch": [
        "^\\.pre-commit-config.yaml$"
      ],
      "matchStrings": [
        "# renovate: pypi(?:\\s+?versioning=(?<versioning>.+?))?\n\\s+?-\\s+?(?<depName>.+?)=+(?<currentValue>.+?)\n"
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    },
    {
      "fileMatch": [
        "^\\.pre-commit-config.yaml$"
      ],
      "matchStrings": [
        "repo:\\s+?(?:https://github\\.com/)?(?<depName>.+?)(?:\\.git)?\n+?\\s+rev:\\s+?(?<currentValue>.+?)(?:\\s+?#\\s+?versioning=(?<versioning>.+?))?\n"
      ],
      "datasourceTemplate": "git-tags",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}",
      "lookupNameTemplate": "https://github.com/{{depName}}.git"
    }
  ]
}
